---
import Header from '../components/header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
const { titre } = Astro.props;
---

<html lang="fr" class="min-h-full">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{titre}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet" />
	</head>
	   <body class="font-sans min-h-screen flex flex-col relative" style="background: url('/src/assets/background.svg') center/cover no-repeat, linear-gradient(135deg, #2d0036 0%, #f8e1f4 100%); min-height: 100vh;">
		   <div class="absolute inset-0 w-full h-full -z-10 opacity-60" style="background: url('/src/assets/background.svg') center/cover no-repeat;"></div>
		   <Header/>
		   <main class="flex-1 container mx-auto px-4 py-8">
			   <slot />
		   </main>
		   <Footer />
	   </body>
</html>